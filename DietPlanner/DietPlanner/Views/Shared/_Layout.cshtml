<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
    <link href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle">
            <i class="bx bx-menu" id="header-toggle"></i>
        </div>

        <div>
            <div class="profile">
                <div class="user">
                    <h4>Hey, User</h4>
                </div>
                <div class="header_img img-box">
                    <img src="https://i.postimg.cc/BvNYhMHS/user-img.jpg"
                         alt="some user image" />
                </div>
            </div>
            <div class="menu">
                <ul>
                    <li>
                        <a href="#"><i class="bx bx-user"></i>&nbsp;Profile</a>
                    </li>
                    <li>
                        <a href="#"><i class="bx bx-help-circle"></i>&nbsp;Help</a>
                    </li>
                    <li>
                        <a asp-controller="UserManagment" asp-action="Logout"><i class="bx bx-log-out ph-sign-out"></i>&nbsp;Sign Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <i class="bx bxs-food-menu nav_logo-icon"></i>
                    <span class="nav_logo-name">DietPlanner</span>
                </a>

                <div class="nav_list">
                    <a asp-controller="Home" asp-action="Index" class="nav_link">
                        <i class="bx bx-grid-alt nav_icon"></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a href="#" class="nav_link">
                        <i class="bx bx-user nav_icon"></i>
                        <span class="nav_name">Users</span>
                    </a>
                    <a asp-controller="MealPlanner" asp-action="ViewMealPlans" class="nav_link">
                        <i class="bx bxs-bowl-rice nav_icon"></i>
                        <span class="nav_name">Food Planning</span>
                    </a>
                    <a href="#" class="nav_link">
                        <i class="bx bxs-trophy nav_icon"></i>
                        <span class="nav_name">Challenges</span>
                    </a>
                    <a href="#" class="nav_link">
                        <i class="bx bx-message-square-detail nav_icon"></i>
                        <span class="nav_name">Feeds</span>
                    </a>
                    <a href="#" class="nav_link">
                        <i class="bx bxs-injection nav_icon"></i>
                        <span class="nav_name">Expert Help</span>
                    </a>
                </div>
            </div>
            <a href="#" class="nav_link">
                <i class="bx bxs-phone-call nav_icon"></i>

                <span class="nav_name">Contact Us</span>
            </a>
        </nav>
    </div>

    <div class="height-100 ">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>
    <!-- <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    ></script> -->

    <script src="~/js/Layout.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

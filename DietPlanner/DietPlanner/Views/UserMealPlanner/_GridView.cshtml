@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <form asp-controller="Home">
        <div id="calorie_slider_value" style="width: 100%"></div>
        <div id="calorie_slider"></div>
    </form>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/themes/smoothness/jquery-ui.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/jquery-ui.min.js"></script>
    <script type="text/javascript">
        var min = 0;
        var max = 100;
        function SetSlider() {
            //Display the minimum and maximum values.
            $("#calorie_slider_value").html("Calorie." + min + " - Calorie." + max);
            //Initialize the slider.
            $("#calorie_slider").slider({
                min: min,
                max: max,
                step: 1,
                values: [min, max],
                stop: function (event, ui) {
                    var start = parseInt(ui.values[0]);
                    var end = parseInt(ui.values[1]);
                    $("#calorie_slider_value").html("Calorie." + start + " - Calorie." + end);
                },
                slide: function (event, ui) {
                    if ((ui.values[0] + 5) >= ui.values[1]) {
                        return false;
                    }
                    var start = parseInt(ui.values[0]);
                    var end = parseInt(ui.values[1]);
                    $("#calorie_slider_value").html("Calorie." + start + " - Calorie." + end);
                }
            });
        }
        $(function () {
            SetSlider();
        });
    </script>
</body>
</html>
@model Domain.DTO.MealPlanViewModel
@{
    Layout = "_Layout";
    var title = "Create Meal Plans";
    ViewData["Title"] = title;
}

<style>
    .input-validation-error {
        border-color: red;
    }
</style>
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}

@if (TempData["UnSuccessful"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["UnSuccessful"]
    </div>
}

<h2>@title</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form class="m-1 p-1" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="PlanName"></label>
        <input asp-for="PlanName" class="form-control" placeholder="Enter Your Plan Name" />
        <span asp-validation-for="PlanName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlanDescription"></label>
        <input asp-for="PlanDescription" class="form-control" placeholder="Enter Your Plan Description" />
        <span asp-validation-for="PlanDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" type="file" class="form-control" placeholder="Enter Image For your Meal Plan" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BreakfastMealName"></label>
        <select asp-for="BreakfastMealName" class="form-control"
        asp-items="@(new SelectList(ViewBag.ListOfBreakfast,"Value","Text" ))">
       
        </select>
        <span asp-validation-for="BreakfastMealName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LunchMealName"></label>
        <select asp-for="LunchMealName" class="form-control"
                asp-items="@(new SelectList(ViewBag.ListOfLunch,"Value","Text" ))">
        </select>
        <span asp-validation-for="LunchMealName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DinnerMealName"></label>
        <select asp-for="DinnerMealName" class="form-control"
                asp-items="@(new SelectList(ViewBag.ListOfDinner,"Value","Text" ))">
        </select>
        <span asp-validation-for="DinnerMealName" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>



@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}